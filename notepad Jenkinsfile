pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                url: 'https://github.com/<your-username>/flask-demo.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t flask-ci-demo .'
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker stop flask-ci-container || true'
                sh 'docker rm flask-ci-container || true'
                sh 'docker run -d -p 5002:5000 --name flask-ci-container flask-ci-demo'
            }
        }
    }
}